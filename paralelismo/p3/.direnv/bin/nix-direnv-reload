#!/usr/bin/env bash
set -e
if [[ ! -d "/mnt/data/Documents/fic/2_curso/q_2/CP/paralelismo/lab/p3" ]]; then
  echo "Cannot find source directory; Did you move it?"
  echo "(Looking for "/mnt/data/Documents/fic/2_curso/q_2/CP/paralelismo/lab/p3")"
  echo 'Cannot force reload with this script - use "direnv reload" manually and then try again'
  exit 1
fi

# rebuild the cache forcefully
_nix_direnv_force_reload=1 direnv exec "/mnt/data/Documents/fic/2_curso/q_2/CP/paralelismo/lab/p3" true

# Update the mtime for .envrc.
# This will cause direnv to reload again - but without re-building.
touch "/mnt/data/Documents/fic/2_curso/q_2/CP/paralelismo/lab/p3/.envrc"

# Also update the timestamp of whatever profile_rc we have.
# This makes sure that we know we are up to date.
touch -r "/mnt/data/Documents/fic/2_curso/q_2/CP/paralelismo/lab/p3/.envrc" "/mnt/data/Documents/fic/2_curso/q_2/CP/paralelismo/lab/p3/.direnv"/*.rc
